{
    "manifest_version": 3,
    "name": "StreamLingo",
    "version": "1.0",
    "description": "Translate audio from streaming websites for language learners",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "host_permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://*.netflix.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        },
        "default_title": "StreamLingo",
        "browser_style": true,
        "badge": {
            "color": "#f00",
            "text": "NEW"
        }
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}